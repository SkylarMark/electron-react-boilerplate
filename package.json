{
  "name": "electron-react-boilerplate",
  "version": "1.0.0",
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^7.2.1",
    "electron-is-dev": "^1.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^5.0.0"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.2",
    "electron": "^16.0.4",
    "electron-builder": "^22.7.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build --prod",
    "electron-start": "electron .",
    "dev-start": "concurrently \"cross-env BROWSER=none npm run start\" \"electron .\"",
    "package": "npm run build --prod && electron-builder",
    "electron-package": "electron-builder"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "author": "Skylar Mark",
  "description": "Electron React Boilerplate",
  "build": {
    "appId": "com.skylarmark.electron-react-boilerplate",
    "files": [
      "build/**/*",
      "*.js",
      "*.jsx",
      "public",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "asar": true,
    "win": {
      "target": "nsis"
    }
  }
}
